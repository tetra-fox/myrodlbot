{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "paths": {
      "components": ["./src/components/bot.ts"]
    },
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
